{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "nest-cli": {
    "assets": [
      "src/public/**/*"
    ],
    "watchAssets": true
  }
}
